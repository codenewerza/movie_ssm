<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.GenreDao">
    <select id="selectGenreByGid" resultType="entity.Genre">
        select * from genre where gid = #{gid};
    </select>
    <select id="countGenreNum">
        select count(gid) from genre;
    </select>
</mapper>